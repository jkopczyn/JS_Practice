<form class="post-form">
  <label> Title
    <input type="text" name="post[title]" value="<%= post.get('title') %>">
  </label>
  <br>
  <label> Body
    <textarea name="post[body]" rows="8" cols="40"><%= post.get('body') %></textarea>
  </label>
  <br>
  <input type="submit" value="Submit" class='submit-button'>
</form>
